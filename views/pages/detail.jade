extends ../layout
block content
	.container
		.row
			.col-md-7
				embend(src="{movie.flash", allowFullScreen="true", quality="high", width="720", 
					height="600", align="middle",type="application/x-shockwave-flash")
			.col-md-5
				dl.dl-horizontal
					dt MOVIE NAME
					dd= movie.title
					dt DIRECTOR
					dd= movie.director
					dt country
					dd= movie.country
					dt language
					dd= movie.language
					dt date
					dd= movie.year
					dt description
					dd= movie.summary